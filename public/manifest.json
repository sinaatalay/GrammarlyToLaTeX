{
  "manifest_version": 3,
  "name": "Grammarly To LaTeX",
  "description": "A browser extension to convert Grammarly text to LaTeX.",
  "author": "Sina Atalay",
  "version": "1.0.0",
  "default_locale": "en",
  "homepage_url": "https://github.com/sinaatalay/GrammarlyToLaTeX.git",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "action": {
    "default_popup": "src/index.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "permissions": ["storage", "activeTab", "clipboardWrite"]
}
